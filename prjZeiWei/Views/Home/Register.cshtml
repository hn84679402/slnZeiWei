<style>
    body {
        background-color: black;
    }
</style>

@{
    ViewBag.Title = "Register";
}

<h2 style="color:white">會員註冊</h2>
<form method="post" action="@Url.Action("checkValidationNumber")" id="formPost">
    <h4 style="color:white">帳號</h4>@Html.TextBox("fAccount", null, new { placeholder = "請輸入帳號" })<br />
    <h4 style="color:white">密碼</h4>@Html.Password("fPassword", null, new { placeholder = "請輸入密碼" })<br />
    <h4 style="color:white">確認密碼</h4>@Html.Password("CheckPassword", null, new { placeholder = "請輸入密碼" })<br />
    <h4 style="color:white">驗證碼</h4>@Html.TextBox("validationNumber", null, new { placeholder = "請輸入驗證碼" })<br />
    <img src="@Url.Action("getVaildationImg")" id="imgCode" />
    <input id="Button1" type="button" value="更新驗證碼" onclick="imgCode.src= '@Url.Action("getVaildationImg")?'+Math.random() " />
    <input id="requestPath" name="requestPath" value="@Request.FilePath" hidden />
    <h5 style="color:white">@ViewBag.errorMessages</h5>
    <input class="btn btn-success" type="submit" value="送出" />
</form>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script>
    $('#formPost').submit(function () {
        if ($('#fAccount').val() == "" || $('#fPassword').val() == "" || $('#CheckPassword').val() == "") {
            alert("帳號、密碼等欄位不可為空");
            return false;
        }else {
            $('#formPost').submit();
        }
    })
</script>

